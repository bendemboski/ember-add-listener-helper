{
  "name": "ember-add-listener-helper",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/bendemboski/ember-add-listener-helper",
  "license": "MIT",
  "author": "Ben Demboski",
  "scripts": {
    "build": "pnpm --filter ember-add-listener-helper build",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "release": "dotenv release-it",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter ember-add-listener-helper start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it-plugins/workspaces": "^4.0.0",
    "concurrently": "^8.2.0",
    "dotenv-cli": "^7.2.1",
    "release-it": "^16.1.3"
  },
  "pnpm": {
    "overrides": {
      "@glimmer/validator": "0.84.3",
      "@glimmer/util": "0.84.3"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md addon/",
      "after:bump": "pnpm install"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "addon"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "18.12.0",
    "pnpm": "8.14.3"
  }
}
